<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#e1d7c3"
    >

    <Button
        android:layout_width="130dp"
        android:id="@+id/buttonBack"
        android:layout_height="97dp"
        android:layout_weight="0.20"
        android:background="@drawable/ic_close_light" />

    <EditText
        android:layout_width="300dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/resultTextView"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Click on the micro to talk with Sophie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15pt"
        android:id="@+id/textView3"
        android:layout_below="@+id/resultTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView.PopupMenu" />

    <TextView
        android:text=" Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="Answer:"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/responseTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text=" "
        android:layout_width="match_parent"
        android:id="@+id/listenButton2"
        android:onClick="listenButtonOnClick"
        android:background="@drawable/micro2"
        android:layout_below="@+id/buttonBack"
        android:layout_height="200dp" />

</RelativeLayout>