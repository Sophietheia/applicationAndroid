<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
    android:background="#e9e5dc"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"

tools:context="sophie.testgooglemaps.MainActivity">


    <Button
        android:text="Send Alert"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/button3"
        android:background="#db4a4a"
        android:layout_alignBottom="@+id/buttonGame"
        android:layout_alignTop="@+id/buttonGame"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:textStyle="bold"/>

    <Button
        android:text="Play Game"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:id="@+id/buttonGame"
        android:background="#52a1b8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="390dp"
        android:textStyle="bold"/>

    <Button
        android:text="Talk"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:id="@+id/button2"
        android:background="#3fb6ad"
        android:layout_above="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="WHERE AM I"
        android:id="@+id/button1"
        android:background="#c7c9ca"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button2"
        android:textStyle="bold"/>

    <ImageView
        app:srcCompat="@drawable/logosophie"
        android:id="@+id/imageView"
        android:layout_height="300dp"
        android:layout_width="200dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:text="Rappels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>